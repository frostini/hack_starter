<div class="row">
  <div class="col-md-4 col-xs-12">
    <div class="white-box">
      <div class="user-bg">

      <%= image_tag(current_user.avatar_url, class: "img-responsive user_profile_img") %>
        <div class="overlay-box">
          <div class="user-content">
            <a href="javascript:void(0)"><img src="../plugins/images/users/genu.jpg" class="thumb-lg img-circle" alt="img"></a>
          </div>
        </div>
      </div>
      <div class="user-btm-box m-t-20 text-center">
        <div class="col-xs-12">
          <h4 class="">
            Hello
          </h4>
          <h5 class="">
            <%=current_user.name%>
          </h5>
        </div>
      </div>
    </div>
  </div>

        <div class="col-sm-8 col-xs-12">
          <div class="white-box">
            <ul class="nav nav-tabs tabs customtab">
              <li class="active tab"><a href="#details" data-toggle="tab"> <span class="visible-xs"><i class="fa fa-home"></i></span> <span class="hidden-xs">Details</span> </a> </li>
              <li class="tab"><a href="#ratings" data-toggle="tab"> <span class="visible-xs"><i class="fa fa-user"></i></span> <span class="hidden-xs">Feedback</span> </a> </li>
<!--               <li class="tab"><a href="#messages" data-toggle="tab" aria-expanded="true"> <span class="visible-xs"><i class="fa fa-envelope-o"></i></span> <span class="hidden-xs">Map</span> </a> </li> -->
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="details">
                <h4 class="font-bold m-t-30 text-center"><%= current_user.user_type %> Details</h4>
                <hr>
                <h4 class="m-t-30">Name</h4>
                <p class="m-t-10">
                  <%=current_user.name%>
                </p>
                <h4 class="m-t-30">Email</h4>
                <p class="m-t-10">
                  <%=current_user.email%>
                </p>

                <% if current_user.is_participant? %>
                  <h4 class="m-t-30">Monthly Income</h4>
                  <p class="m-t-10">
                    <%=current_user.monthly_household_income%>
                  </p>
                  <h4 class="m-t-30">Household Size</h4>
                  <p class="m-t-10">
                    <%=current_user.household_member_size%>
                  </p>
                  <h4 class="m-t-30">Voucher Number</h4>
                  <p class="m-t-10">
                    <%=current_user.voucher_number%>
                  </p>
                <% end %>

                <hr>

                <div class="row">
<% if current_user.is_participant? && current_user.favorites %>
                <h4 class="">Favorites</h4>

<%current_user.favorites.each do |fav|%>

<div class="panel panel-default">
<div class="panel-heading text-center"><%=fav.dwelling.try(:display_name)%>

  <%if current_user%>
                    <a href=<%= unfavorite_dwelling_url(fav.dwelling) %> data-method="put" class="btn btn-block btn-warning">
                      <i class="fa fa-star"></i> <span>Unfavorite</span>
                    </a>
<%end%>

</div>
<div class="panel-wrapper collapse in">
<div class="panel-body">
<div class="row">
  <div class="col-xs-4">
    <%= image_tag(fav.dwelling.img_url, class: "media-object img-responsive")%>
  </div>
  <div class="col-xs-8">

<p><%=fav.dwelling.address.full_street_address%></p>
<button class="btn btn-default disabled">
  Bedrooms <%= fav.dwelling.num_rooms%>
</button>
<button class="btn btn-default disabled">
  Bathrooms <%= fav.dwelling.num_bathrooms%>
</button>
  </div>
</div>

</div>
<div class="panel-footer">
<%= link_to"See property details", dwelling_path(fav.dwelling), class: "center-block text-center" %>
</div>
</div>
</div>
<!-- </div> -->
<%end%>
<%end%>
</div>

                <hr>


              </div>
              <div class="tab-pane" id="ratings">
                <h4 class="">Participant Feedback</h4>
                <hr>
                <h5>Friendly<span class="pull-right">80%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
                <h5>Respectable<span class="pull-right">90%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:90%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
                <h5>Clean<span class="pull-right">50%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
                <h5>Attentive <span class="pull-right">70%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
                <h5>Pays on Time<span class="pull-right">80%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
                <h5>Cleanliness<span class="pull-right">90%</span></h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:90%;"> <span class="sr-only">50% Complete</span> </div>
                </div>
              </div>

 <!--              <div class="tab-pane" id="messages">
              <h1>Hello Hello</h1>
              </div> -->

            </div>
          </div>
        </div>


      </div>
      <!-- /.row -->